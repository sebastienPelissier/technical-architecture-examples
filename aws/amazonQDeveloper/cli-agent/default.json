{
  "$schema": "https://raw.githubusercontent.com/aws/amazon-q-developer-cli/refs/heads/main/schemas/agent-v1.json",
  "name": "{{AGENT_NAME}}",
  "description": "{{AGENT_DESCRIPTION}}",
  "prompt": "{{AGENT_PROMPT}}\n\nYour expertise covers:\n- {{TECH_STACK_1}}\n- {{TECH_STACK_2}}\n- {{TECH_STACK_3}}\n\nWhen helping:\n- {{INSTRUCTION_1}}\n- {{INSTRUCTION_2}}\n- {{INSTRUCTION_3}}, Explain your reasoning, Respond in French",
  "mcpServers": {
    "aws-knowledge-mcp-server": {
      "disabled": false,
      "type": "http",
      "timeout": 30000,
      "url": "https://knowledge-mcp.global.api.aws"
    }
  },
  "tools": ["*"],
  "toolAliases": {},
  "resources": [
    "file://AmazonQ.md",
    "file://AGENTS.md",
    "file://README.md",
    "file://.amazonq/rules/aiAgent/*.md",
    "file://examples/**/*.yml",
    "file://README.md",
    "file://package.json",
    "file://composer.json"
  ],
  "hooks": {
    "userPromptSubmit": [
      {
        "command": "pwd",
        "timeout_ms": 30000,
        "max_output_size": 10240,
        "cache_ttl_seconds": 0
      }
    ],
    "agentSpawn": [
      {"command": "git branch --show-current"},
      {
        "command": "git status",
        "timeout_ms": 30000,
        "max_output_size": 10240,
        "cache_ttl_seconds": 0
      }
    ]
  },
  "toolsSettings": {},
  "useLegacyMcpJson": false,
  "model": "claude-sonnet-4.5"
}